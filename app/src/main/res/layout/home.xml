
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity" >
    
   		 <RelativeLayout
   		     android:id="@+id/topBox"
   		     android:layout_width="fill_parent"
   		     android:layout_height="130dp"
   		     android:orientation="vertical" >

		    <ImageView
		        android:id="@+id/imageView1"
		        android:layout_width="53dp"
		        android:layout_height="53dp"
		        android:layout_alignParentTop="true"
		        android:layout_centerHorizontal="true"
		        android:layout_marginTop="22dp"
		        android:src="@drawable/site_logo" />

		    <TextView
		        android:id="@+id/textView1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/imageView1"
		        android:layout_centerHorizontal="true"
		        android:text="@string/home_title"
		        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:textSize="15sp" />
   		     
    	</RelativeLayout>
    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:layout_below="@+id/topBox"
	        android:orientation="vertical" >

	        <Button
	            android:id="@+id/button1"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Pre Clinic"
	            android:textColor="#FFFFFF"
				android:textSize="20sp"
	            android:layout_margin="10dp"
        		android:background="@drawable/button_green"
	            android:gravity="center_horizontal"
	            android:shadowColor="#A8A8A8"
				android:shadowDx="0"
				android:shadowDy="0"
				android:shadowRadius="5"
				android:onClick="gotoPreClinicScreen"
	            />
	        <Button
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Clinic"
	            android:textColor="#FFFFFF"
				android:textSize="20sp"
	            android:layout_margin="10dp"
        		android:background="@drawable/button_green"
	            android:gravity="center_horizontal"
	            android:shadowColor="#A8A8A8"
				android:shadowDx="0"
				android:shadowDy="0"
				android:shadowRadius="5"
				android:onClick="gotoClinicScreen"
	            />
	        <Button
	             android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Vaccine"
	            android:textColor="#FFFFFF"
				android:textSize="20sp"
	            android:layout_margin="10dp"
        		android:background="@drawable/button_green"
	            android:gravity="center_horizontal"
	            android:shadowColor="#A8A8A8"
				android:shadowDx="0"
				android:shadowDy="0"
				android:shadowRadius="5"
				android:onClick="gotoPatientDetailsScreen"
	            />

	        <Button
	             android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Close Out"
	            android:textColor="#FFFFFF"
				android:textSize="20sp"
	            android:layout_margin="10dp"
        		android:background="@drawable/button_green"
	            android:gravity="center_horizontal"
	            android:shadowColor="#A8A8A8"
				android:shadowDx="0"
				android:shadowDy="0"
				android:shadowRadius="5" />
	
    </LinearLayout>
</LinearLayout>
